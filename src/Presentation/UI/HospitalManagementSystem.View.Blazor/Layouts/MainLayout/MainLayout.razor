@namespace HospitalManagementSystem.Blazor
@inherits LayoutComponentBase

<FluentDesignTheme Mode="@Mode" OfficeColor="OfficeColor.Sway">
    <FluentLayout>
        <FluentHeader>
            <div style="display: flex; align-items: center; justify-content: space-between; width: 100%;">
                <UserInfoLayout />
            </div>
        </FluentHeader>
        <br />
        <FluentStack Class="main" Orientation="Orientation.Horizontal" Width="100%">
            <NavigationMenuLayout />
            <FluentBodyContent>
                <div class="content">
                    @Body
                    <FluentDialogProvider />
                    <FluentToastProvider />
                </div>
            </FluentBodyContent>
        </FluentStack>
        <br />
        <FluentFooter>
            LBA4hoai
        </FluentFooter>
    </FluentLayout>
</FluentDesignTheme>